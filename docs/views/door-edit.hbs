                <label for="assemblyKeys2">Колиество ключей</label>
                <input type="text" name="assemblyKeys2" id="assemblyKeys2" value="{{door.assembly2.assemblyKeys2}}">
            </div>
            
            <input type="hidden" name="id" value="{{door.id}}">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="header__btn">Сохранить</button>
        </form>
        
        <form action="/catalog/remove" method="POST">
            <input type="hidden" name="id" value="{{door.id}}">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="header__btn dtn-door-delete">Удалить</button>
        </form>
    </div>
</div>
