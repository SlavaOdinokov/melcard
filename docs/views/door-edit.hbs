                        <label for="sanRemo9003">Сан Ремо 1 RAL 9003</label>
                    </div>

                    <div class="add-field__panels-group">
                        <input 
                            type="checkbox" name="panels" id="sanRemo9010"
                            value="Сан Ремо 1 RAL 9010 (цвет на фото может не совпадать), san_remo_1_RAL_9010, 10600, san-remo__9010" 
