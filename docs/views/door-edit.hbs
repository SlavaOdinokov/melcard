            <div class="add-field">
                <label for="descDoor1">Описание (абзац)</label>
                <textarea type="text" name="descDoor1" id="descDoor1">{{door.descDoor1}}</textarea>

                <label for="descDoor2">Описание (абзац)</label>
                <textarea type="text" name="descDoor2" id="descDoor2">{{door.descDoor2}}</textarea>

                <label for="descDoor3">Описание (абзац)</label>
                <textarea type="text" name="descDoor3" id="descDoor3">{{door.descDoor3}}</textarea>
            </div>

            <div class="add-field">
                <label for="assemblyLocks1">Замок</label>
                <input type="text" name="assemblyLocks1" id="assemblyLocks1" value="{{door.assembly1.assemblyLocks1}}">
            </div>
            <div class="add-field">
                <label for="assemblyClass1">Класс</label>
                <input type="text" name="assemblyClass1" id="assemblyClass1" value="{{door.assembly1.assemblyClass1}}">
            </div>
            <div class="add-field">
                <label for="assemblyType1">Тип</label>
                <input type="text" name="assemblyType1" id="assemblyType1" value="{{door.assembly1.assemblyType1}}">
            </div>
            <div class="add-field">
                <label for="assemblyCountry1">Страна производителя</label>
                <input type="text" name="assemblyCountry1" id="assemblyCountry1" value="{{door.assembly1.assemblyCountry1}}">
            </div>
            <div class="add-field">
                <label for="assemblyBolts1">Количество ригелей</label>
                <input type="text" name="assemblyBolts1" id="assemblyBolts1" value="{{door.assembly1.assemblyBolts1}}">
            </div>
            <div class="add-field add-field-last">
                <label for="assemblyKeys1">Колиество ключей</label>
                <input type="text" name="assemblyKeys1" id="assemblyKeys1" value="{{door.assembly1.assemblyKeys1}}">
            </div>

            <div class="add-field">
                <label for="assemblyLocks2">Замок</label>
                <input type="text" name="assemblyLocks2" id="assemblyLocks2" value="{{door.assembly2.assemblyLocks2}}">
            </div>
            <div class="add-field">
                <label for="assemblyClass2">Класс</label>
                <input type="text" name="assemblyClass2" id="assemblyClass2" value="{{door.assembly2.assemblyClass2}}">
            </div>
            <div class="add-field">
                <label for="assemblyType2">Тип</label>
                <input type="text" name="assemblyType2" id="assemblyType2" value="{{door.assembly2.assemblyType2}}">
            </div>
            <div class="add-field">
                <label for="assemblyCountry2">Страна производителя</label>
                <input type="text" name="assemblyCountry2" id="assemblyCountry2" value="{{door.assembly2.assemblyCountry2}}">
            </div>
            <div class="add-field">
                <label for="assemblyBolts2">Количество ригелей</label>
                <input type="text" name="assemblyBolts2" id="assemblyBolts2" value="{{door.assembly2.assemblyBolts2}}">
