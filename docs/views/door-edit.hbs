<div class="container">
    <div class="add">
        <h1>Редактировать {{door.titleDoor}}</h1>
        
        {{!-- enctype="multipart/form-data" --}}
        <form action="/catalog/edit" method="POST" enctype="multipart/form-data">
            <div class="add-field">
                <label for="titleDoor">Название двери *</label>
                <input type="text" name="titleDoor" id="titleDoor" value="{{door.titleDoor}}" required>
            </div>

            <div class="add-field">
                <label for="imgDoor">Изображение двери</label>
                <input type="file" name="imgDoor" id="imgDoor">
            </div>

            <div class="add-field">
                <label for="priceDoor">Цена *</label>
                <input type="text" name="priceDoor" id="priceDoor" value="{{door.priceDoor}}" required>
            </div>

            <div class="add-field">
                <label for="oldPriceDoor">Старая цена (зачеркнута)</label>
                <input type="text" name="oldPriceDoor" id="oldPriceDoor" value="{{door.oldPriceDoor}}">
            </div>

            <div class="add-field">
                <label for="classDoor">Класс двери *</label>
                <select name="classDoor" id="classDoor">
                    <option value="Премиум класс">Премиум класс</option>
                    <option value="Максимальный комфорт">Максимальный комфорт</option>
                    <option value="Бизнес класс">Бизнес класс</option>
                </select>
            </div>

            <div class="add-field">
                <label for="badgeDoor_1">Статус наличия *</label>
                <select name="badgeDoor1" id="badgeDoor_1">
                    <option value="В наличии">В наличии</option>
                    <option value="Нет в наличии">Нет в наличии</option>
                </select>
            </div>

            <div class="add-field">
                <label for="badgeDoor_2">Статус акции</label>
                <select name="badgeDoor2" id="badgeDoor_2">
                    <option value=""></option>
                    <option value="Распродажа">Распродажа</option>
                    <option value="Новинка">Новинка</option>
                </select>
            </div>

            {{#each door.specifications}}
                <div class="add-field add-field--spec">
                    <label for="specSteelThickness">Толщина стали *</label>
                    <input type="text" name="specSteelThickness" id="specSteelThickness" value="{{specSteelThickness}}">
                </div>
                <div class="add-field add-field--spec">
                    <label for="specBladeThickness">Толщина полотна *</label>
                    <input type="text" name="specBladeThickness" id="specBladeThickness" value="{{specBladeThickness}}">
                </div>
                <div class="add-field add-field--spec">
                    <label for="specDoorThickness">Толщина двери *</label>
                    <input type="text" name="specDoorThickness" id="specDoorThickness" value="{{specDoorThickness}}">
                </div>
                <div class="add-field add-field--spec">
                    <label for="specDoorWeight">Вес двери *</label>
                    <input type="text" name="specDoorWeight" id="specDoorWeight" value="{{specDoorWeight}}">
                </div>
            {{/each}}

            <div class="add-field">
                <h3>Выберети панели</h3>
                <div class="add-field__panels">
                    
                    <div class="add-field__panels-group">
                        <input 
